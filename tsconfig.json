{
  "compilerOptions": {
    "outDir": "./npm/types",
    "esModuleInterop": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ]
  },
  "include": [
    "./npm/src/**/*.ts"
  ]
}
